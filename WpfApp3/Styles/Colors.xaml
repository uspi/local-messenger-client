<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WPFClient">
    
    <!-- base window colors -->
    <SolidColorBrush x:Key="HeadLine" Color="#007161"/>
    <SolidColorBrush x:Key="ContentBody" Color="#00473d"/>

    <SolidColorBrush x:Key="MinimizeButton" Color="#007161"/>
    <SolidColorBrush x:Key="MaximazeButton" Color="#007161"/>
    <SolidColorBrush x:Key="CloseButton" Color="#007161"/>
    
    <!-- state HOVER -->
    <SolidColorBrush x:Key="MinimizeButton_Hover" Color="#32998a"/>
    <SolidColorBrush x:Key="MaximazeButton_Hover" Color="#32998a"/>
    <SolidColorBrush x:Key="CloseButton_Hover" Color="#e92539"/>
    
</ResourceDictionary>